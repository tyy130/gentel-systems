# Example environment variables for TacticDev GenTel™
# Copy this file to `.env` locally and fill in your secrets before running locally.

# App configuration
NEXT_PUBLIC_APP_NAME="TacticDev GenTel™"
NEXT_PUBLIC_SITE_ORIGIN="https://gentel.tacticdev.com"

# OpenAI / Responses API
OPENAI_API_KEY="your-openai-api-key"
RESPONSES_MODEL="gpt-5.2"
RESPONSES_DEVELOPER_PROMPT="Optional: override developer prompt"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="https://gentel.tacticdev.com/api/oauth/google/callback"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_REDIRECT_URI="https://gentel.tacticdev.com/api/oauth/github/callback"

# Optional: vector store defaults
DEFAULT_VECTOR_STORE_ID=""
DEFAULT_VECTOR_STORE_NAME="core-knowledge"

# Admin / app secrets
ADMIN_PASSWORD="a-strong-password"
OAUTH_STATE_SECRET="a-very-long-random-string-for-signing-oauth-state"
OAUTH_RETURN_ALLOWLIST="https://gentel.tacticdev.com,https://teal-wasp-987766.hostingersite.com"

# Development OAuth (Optional)
GITHUB_CLIENT_ID_DEV=""
GITHUB_CLIENT_SECRET_DEV=""
GITHUB_REDIRECT_URI_DEV="https://teal-wasp-987766.hostingersite.com/api/oauth/github/callback"
GOOGLE_CLIENT_ID_DEV=""
GOOGLE_CLIENT_SECRET_DEV=""
GOOGLE_REDIRECT_URI_DEV="https://teal-wasp-987766.hostingersite.com/api/oauth/google/callback"